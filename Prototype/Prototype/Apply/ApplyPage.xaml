<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.ApplyPage"
             Title="Apply">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="StatusLabel" HorizontalOptions="Center" 
                HorizontalTextAlignment="Center" FontSize="Large"/>
            <Label Text=" " BackgroundColor="#7BC844" HeightRequest="2"/>
            <StackLayout x:Name="ButtonsLayout" IsEnabled="false" IsVisible="false">
                <Label Text="New Student Application" HorizontalTextAlignment="Center"/>    
                <Button x:Name="StartButton" Text="Start" HorizontalOptions="Center"
                    Clicked="StartApplication"/>
                <Label Text=" " BackgroundColor="#7BC844" HeightRequest="2"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>